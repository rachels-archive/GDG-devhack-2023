<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.hackathon">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hackathon"
        tools:targetApi="31"
        android:enableOnBackInvokedCallback="true">

        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ReportsActivity"
            android:exported="false"
            android:label="@string/title_activity_reports"
            android:theme="@style/Theme.Hackathon" />
        <activity
            android:name=".activities.ResourcesActivity"
            android:exported="false"
            android:label="@string/title_activity_resources"
            android:theme="@style/Theme.Hackathon" />
        <activity
            android:name=".activities.ScanActivity"
            android:exported="false"
            android:label="@string/title_activity_scan"
            android:theme="@style/Theme.Hackathon" />

        <activity
            android:name=".activities.ArticleActivity"
            android:exported="false"
            android:label="@string/title_activity_article"
            android:theme="@style/Theme.Hackathon" />

        <activity
            android:name=".activities.ChatActivity"
            android:exported="false"
            android:label="@string/title_activity_chat"
            android:theme="@style/Theme.Hackathon" />
        <activity
            android:name=".activities.ResourceDetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_resource_details"
            android:theme="@style/Theme.Hackathon" />
        <activity
            android:name=".activities.ResourceListActivity"
            android:exported="false"
            android:label="@string/title_activity_resource_list"
            android:theme="@style/Theme.Hackathon" />

        <activity
            android:name=".activities.UploadActivity"
            android:exported="false"
            android:label="UploadActivity"
            android:theme="@style/Theme.Hackathon" />

        <activity
            android:name=".activities.DetailActivity"
            android:exported="false"
            android:label="DetailActivity"
            android:theme="@style/Theme.Hackathon" />

        <activity
            android:name=".activities.UpdateActivity"
            android:exported="false"
            android:label="UpdateActivity"
            android:theme="@style/Theme.Hackathon" />

        <activity
            android:name=".activities.TrackActivity"
            android:exported="false"
            android:label="TrackActivity"
            android:theme="@style/Theme.Hackathon" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />


    </application>

</manifest>